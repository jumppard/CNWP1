@using TestWebApp.ViewModel
@using PagedList.Mvc
@model  PagedList.IPagedList<TestWebApp.ViewModel.NotificationViewModel>

<div>
    <table>
        <tr class="tableHeader">
            <th style="padding: 1.5rem;border: solid thin;background-color:lightgray;text-align:center">ID</th>
            <th style="padding: 1.5rem;border: solid thin;background-color:lightgray;text-align:center">App Name</th>
            <th style="padding: 1.5rem;border: solid thin;background-color:lightgray;text-align:center">Customer</th>
            <th style="padding: 1.5rem;border: solid thin;background-color:lightgray;text-align:center;width:auto">Inserted</th>
            <th style="padding: 1.5rem;border: solid thin;background-color:lightgray;text-align:center">Last Updated</th>
            <th style="padding: 1.5rem;border: solid thin;background-color:lightgray;text-align:center">Notification Type</th>
            <th style="padding: 1.5rem;border: solid thin;background-color:lightgray;text-align:center">Subject</th>
            <th style="padding: 1.5rem;border: solid thin;background-color:lightgray;text-align:center">Message</th>
            <th style="padding: 1.5rem;border: solid thin;background-color:lightgray;text-align:center">Status</th>
        </tr>
        @if (Model.Any())
            {
                foreach (var item in Model)
                {
                <tr>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.ID                  </td>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.AppName           </td>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.PartnerName         </td>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3);width:auto">@item.Inserted      </td>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.LastUpdated   </td>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.NotificationTypeName     </td>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.Subject   </td>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.Message    </td>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.StatusInfo    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>empty</td>
            </tr>
        }
    </table>
</div>
