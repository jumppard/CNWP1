@using TestWebApp.ViewModel
@*@model PosAcceptanceListViewModel*@

@using PagedList.Mvc
@model  PagedList.IPagedList<TestWebApp.ViewModel.PosAcceptanceViewModel>

<div>
    <table>
        <tr class="tableHeader">
            <th style="padding: 1.5rem;border: solid thin;background-color:lightgray;text-align:center">Cardnet ID            </th>
            <th style="padding: 1.5rem;border: solid thin;background-color:lightgray;text-align:center">Customer Request ID      </th>
            <th style="padding: 1.5rem;border: solid thin;background-color:lightgray;text-align:center">Customer              </th>
                                       
            <th style="padding: 1.5rem;border: solid thin;background-color:lightgray;text-align:center">Provider Terminal Type</th>
            <th style="padding: 1.5rem;border: solid thin;background-color:lightgray;text-align:center">Customer Terminal     </th>
            <th style="padding: 1.5rem;border: solid thin;background-color:lightgray;text-align:center">Account Type     </th>
            <th style="padding: 1.5rem;border: solid thin;background-color:lightgray;text-align:center">Requested Terminal Status    </th>
            <th style="padding: 1.5rem;border: solid thin;background-color:lightgray;text-align:center">Inserted              </th>
            <th style="padding: 1.5rem;border: solid thin;background-color:lightgray;text-align:center">Final Status          </th> <!-- status after request -->
            <th style="padding: 1.5rem;border: solid thin;background-color:lightgray;text-align:center">Processed             </th>
            <th style="padding: 1.5rem;border: solid thin;background-color:lightgray;text-align:center">Message               </th>
        </tr>

        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <tr bgcolor=@item.RowColor>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.ID                  </td>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.RequestId           </td>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.PartnerName         </td>
                                                                   
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.TerminalTypeId      </td>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.ExternalTerminalId  </td>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.AccountTypeIdName   </td>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.NewAcceptState      </td>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.CreationDateTime    </td>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.StatusAfterRequest  </td>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.AnswerDateTime      </td>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.Message             </td>

                </tr>
            }
        }
        else
        {
            <tr>
                <td>empty</td>
            </tr>
        }

    </table>
</div>

