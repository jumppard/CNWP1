@using TestWebApp.ViewModel
@*@model CardOrderListViewModel*@

@using PagedList.Mvc
@model  PagedList.IPagedList<TestWebApp.ViewModel.CardOrderViewModel>

<div>
    <table>

        <tr class="tableHeader">
            <th style="padding: 1.0rem;border: solid thin;background-color:lightgray;text-align:center">Cardnet ID</th>
            <th style="padding: 1.0rem;border: solid thin;background-color:lightgray;text-align:center">Customer Request ID        </th>
            <th style="padding: 1.0rem;border: solid thin;background-color:lightgray;text-align:center">Order Type        </th>
            <th style="padding: 1.0rem;border: solid thin;background-color:lightgray;text-align:center">Customer  </th>
            <th style="padding: 1.0rem;border: solid thin;background-color:lightgray;text-align:center">Card Product</th>
                                  
            <th style="padding: 1.0rem;border: solid thin;background-color:lightgray;text-align:center">Card Count        </th>
            <th style="padding: 1.0rem;border: solid thin;background-color:lightgray;text-align:center">Carrier Type</th>
            <th style="padding: 1.0rem;border: solid thin;background-color:lightgray;text-align:center">Envelope Type        </th>
            <th style="padding: 1.0rem;border: solid thin;background-color:lightgray;text-align:center">Plastic Type        </th>
            <th style="padding: 1.0rem;border: solid thin;background-color:lightgray;text-align:center">Attachement Type        </th>
            <th style="padding: 1.0rem;border: solid thin;background-color:lightgray;text-align:center">Package Attachement Type        </th>
            <th style="padding: 1.0rem;border: solid thin;background-color:lightgray;text-align:center">Delivery List Type        </th>
                                  
            <th style="padding: 1.0rem;border: solid thin;background-color:lightgray;text-align:center">Cards Expiration</th>
            <th style="padding: 1.0rem;border: solid thin;background-color:lightgray;text-align:center">Inserted</th>
            <th style="padding: 1.0rem;border: solid thin;background-color:lightgray;text-align:center">Last Update       </th>
            <th style="padding: 1.0rem;border: solid thin;background-color:lightgray;text-align:center">Status       </th><!-- ANS::REQUEST_STATUS -->
            <th style="padding: 1.0rem;border: solid thin;background-color:lightgray;text-align:center">Deadline         </th>
        </tr>

        @if (Model.Any())
            {
                foreach (var item in Model)
                {
                <tr bgcolor=@item.RowColor>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)"><b>@item.ID</b>       </td>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.RequestID        </td>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.OrderType        </td>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.PartnerName      </td>
                                                                
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.CardTypeName     </td>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.CardCount        </td>
                                                                
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.CarrierTypeId</td>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.EnvelopeTypeId     </td>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.PlasticTypeId   </td>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.AttachementId    </td>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.PackageAttachementId    </td>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.DeliveryListId    </td>
                                                                
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.ValidTo          </td>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.CreationDateTime </td>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.LastUpdate       </td>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.RequestStatusName</td>
                    <td style="padding: 1.0rem;border: solid thin; text-align:center; border-color: rgba(0, 0, 0, 0.3)">@item.SlaDeadLine      </td>
                    <td style="padding: 1.0rem;" bgcolor="white"><a href="@Url.Action("OpenOrder", "CardOrder", new { Id = item.ID })" )>Open</a></td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>empty</td>
            </tr>
        }
    </table>
</div>
